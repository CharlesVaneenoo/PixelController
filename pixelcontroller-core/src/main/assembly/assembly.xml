<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
	<id>distribution</id>
	<formats>
		<format>dir</format>
	</formats>
 
  	<!-- collect external libs -->
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	
    <baseDirectory>${project.artifactId}</baseDirectory>
    
	<files>
 		<file>
			<source>${basedir}/lib/serial/librxtxSerial.jnilib</source>
			<outputDirectory>/lib</outputDirectory>
			<filtered>false</filtered>
		</file>
 		<file>
			<source>${basedir}/lib/serial/librxtxSerial.so</source>
			<outputDirectory>/lib</outputDirectory>
			<filtered>false</filtered>
		</file>
 		<file>
			<source>${basedir}/lib/serial/rxtxSerial.dll</source>
			<outputDirectory>/lib</outputDirectory>
			<filtered>false</filtered>
		</file>
 		<file>
			<source>${basedir}/lib/serial/rxtxSerial64.dll</source>
			<outputDirectory>/lib</outputDirectory>
			<filtered>false</filtered>
		</file>		
		
	</files>
	    
</assembly>
    